                "operationId": "getModuleDataRoute",
                "parameters": [
                    {
                        "name": "courseId",
                        "in": "query",
                        "description": "The id number for the course instance. Must be a positive integer.",
                        "required": true,
                        "schema": {
                            "type": "string"
